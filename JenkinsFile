pipeline{
    agent any
    stages{
        stage("Git Cloning Stage"){
            steps{
                git 'https://github.com/shahJainam961/CalulatorDevOps.git'
            }
        }

        stage("Building Stage"){
            steps{
                sh 'mvn clean&&mvn package -DskipTests'
            }
        }

        stage("Testing Stage"){
            steps{
                sh 'mvn test'
            }
        }
        stage("Pushing the docker Image to Docker Hub"){
            steps{
                sh 'docker push murphy961/spe_devops:1.0'
            }
        }
    }
}